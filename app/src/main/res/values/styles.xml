<resources>

    <style name="SeoulMate" parent="SeoulMate.Base" />
    <!-- Base application theme. -->
    <style name="SeoulMate.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SeoulMate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SeoulMate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SeoulMate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.LOGIN" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeoulMate.LOGIN" parent="@android:style/Widget.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_followers_number</item>
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>


    <style name="SeoulMate.List"></style>

    <style name="SeoulMate.List.Vote" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/question_list_timeview</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>

    </style>

    <style name="SeoulMate.List.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/question_list_title</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="SeoulMate.List.LandingTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="SeoulMate.List.LandingSubTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.CollapsingToolBar"></style>

    <style name="SeoulMate.CollapsingToolBar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lines">2</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>


    <style name="SeoulMate.List.Question.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/question_list_title</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="SeoulMate.List.Content" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/question_list_title</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.List.FeedTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/question_list_title</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.Profile"></style>

    <style name="SeoulMate.Profile.Name" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/profile_name</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="SeoulMate.Profile.About" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_name</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.Profile.Followers.Number" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/profile_followers_number</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="SeoulMate.Profile.Followers.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/profile_name</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.List.TimeView" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/question_list_timeview</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
    </style>

    <style name="SeoulMate.List.WriterName" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/question_list_title</item>
        <item name="fontPath">fonts/Roboto-Bold.ttf</item>
    </style>

    <style name="BottomSheet.StyleDialog" parent="BottomSheet.Dialog">
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowAnimationStyle">@style/BottomSheet.Animation</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="bs_dialogBackground">@color/colorPrimary</item>
        <item name="bs_dividerColor">@color/colorAccent</item>
        <item name="bs_numColumns">4</item>
        <!--<item name="bs_listStyle">@style/BottomSheet.StyleList</item>-->
    </style>

    <style name="TransparentText">
        <item name="android:textColor">#00666666</item>
    </style>

    <style name="Category.Title" parent="android:TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/white
        </item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SeoulMate.Base.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="SeoulMate.Base.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MAIN.NAME" parent="TextAppearance.AppCompat.Title">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">#1565C0</item>
        <item name="fab_colorPressed">#2272CD</item>
        <item name="fab_colorRipple">#62B2FF</item>
    </style>

    <style name="MenuButtonsSmall.Green">
        <item name="fab_colorNormal">#43A047</item>
        <item name="fab_colorPressed">#2E7D32</item>
        <item name="fab_colorRipple">#1B5E20</item>
    </style>

    <!-- Card style -->

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
